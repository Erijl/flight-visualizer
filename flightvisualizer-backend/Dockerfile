# Stage 1: Build the application
FROM eclipse-temurin:21-jdk AS build
WORKDIR /app

# Install Maven
RUN apt-get update && \
    apt-get install -y maven

COPY pom.xml .
RUN mvn dependency:go-offline -B
COPY src ./src
RUN mvn package -DskipTests

# Stage 2: Run the application
FROM eclipse-temurin:21-jdk
WORKDIR /app
COPY --from=build /app/target/*.jar app.jar
EXPOSE 8080

# Arguments
ARG SPRING_TASK_SCHEDULING_POOL_SIZE

ARG FLIGHT_VISUALIZER_API_URL
ARG FLIGHT_VISUALIZER_API_CLIENT_SECRET
ARG FLIGHT_VISUALIZER_API_CLIENT_ID

ARG SPRING_DATASOURCE_URL
ARG SPRING_DATASOURCE_USERNAME
ARG SPRING_DATASOURCE_PASSWORD
ARG SPRING_DATASOURCE_DRIVER_CLASS_NAME

ARG SERVER_PORT

# Env's
ENV SPRING_TASK_SCHEDULING_POOL_SIZE=$SPRING_TASK_SCHEDULING_POOL_SIZE

ENV FLIGHT_VISUALIZER_API_URL=$FLIGHT_VISUALIZER_API_URL
ENV FLIGHT_VISUALIZER_API_CLIENT_SECRET=$FLIGHT_VISUALIZER_API_CLIENT_SECRET
ENV FLIGHT_VISUALIZER_API_CLIENT_ID=$FLIGHT_VISUALIZER_API_CLIENT_ID

ENV SPRING_JPA_HIBERNATE_DDL_AUTO=none
ENV SPRING_DATASOURCE_URL=$SPRING_DATASOURCE_URL
ENV SPRING_DATASOURCE_USERNAME=$SPRING_DATASOURCE_USERNAME
ENV SPRING_DATASOURCE_PASSWORD=$SPRING_DATASOURCE_PASSWORD
ENV SPRING_DATASOURCE_DRIVER_CLASS_NAME=$SPRING_DATASOURCE_DRIVER_CLASS_NAME
ENV SPRING_JPA_SHOW_SQL=false

ENV SERVER_PORT=$SERVER_PORT

ENTRYPOINT ["java","-jar","app.jar"]
